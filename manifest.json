{
  "manifest_version": 3,
  "name": "Canvas Dashboard Extension",
  "version": "1.0",
  "description": "Adds a React-based dashboard to Canvas pages.",
  "permissions": [
    "scripting"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instructure.com/*"
      ],
      "js": [
        "dist/dashboard.js",
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/dashboard-main.css"],
      "matches": ["<all_urls>"]
    }
  ],
   "icons": {
    "16": "canvailogo16.png",
    "48": "canvailogo48.png",
    "128": "canvailogo128.png"
  }
}
